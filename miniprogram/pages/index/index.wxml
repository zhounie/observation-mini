<view class="index">
  <view class="item-box">
    <view class="item">
      <view class="item-left">
        <van-image width="40" height="40" src="/assets/images/daqiwendu.png" />
        <text>温度</text>
      </view>
      <view class="item-rigth">
        <text>{{temp}}℃</text>
      </view>
    </view>
    <view class="item">
      <view class="item-left">
        <van-image width="40" height="40" src="/assets/images/daqishidu.png" />
        <text>湿度</text>
      </view>
      <view class="item-rigth">
        <text>{{humi}}%rh</text>
      </view>
    </view>
    <view class="item">
      <view class="item-left">
        <van-image width="40" height="40" src="/assets/images/rizhaoshishu.png" />
        <text>光照强度</text>
      </view>
      <view class="item-rigth">
        <text>{{lux}}%</text>
      </view>
    </view>
    <view class="item">
      <view class="item-left">
        <van-image width="40" height="40" src="/assets/images/PM10.png" />
        <text>有害气体浓度</text>
      </view>
      <view class="item-rigth">
        <text>{{mq2}}ppm</text>
      </view>
    </view>
  </view>
  <view>
    <view>上线时间：</view>
    <view>运行时长：</view>
  </view>
  <view class="btn-box" wx:if="{{isAlarm}}">
    <view>
      <van-button block plain type="danger" bind:tap="onClose">预警确认</van-button>
    </view>
  </view>
</view>